<h2 class="title">{{name}}</h2>
<div class="country">
    <div class="country__wraper">
        <p class="country__description">Capital: {{capital}}</p>
        <p class="country__description">Population: {{population}}</p>
        <p class="country__description"> Lenguages:</p>
        <ul class="list">
            {{#each this.languages}}
            <li class="list__item">{{name}}</li>
            {{/each}}
        </ul>
    </div>
    <img class="country__flag" src="{{flag}}" alt="flag" width="320px" height="320px">
</div>